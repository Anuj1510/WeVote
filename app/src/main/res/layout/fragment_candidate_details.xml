<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CandidateDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/CandidateIntroPage"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here are the details of Candidate Party work and by judging\non the basis of their work voter can give vote to any\n one party"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CandidateProfile"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidateIntroPage"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:src="@drawable/flag2"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/CandidateNameAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANDIDATE NAME"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidateProfile"
            android:layout_marginTop="20dp"
            />


        <TextView
            android:id="@+id/CandidateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANUJ SHAHI"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidateNameAsk"

            />

        <TextView
            android:id="@+id/CandidatePartyAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANDIDATE PARTY"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidateName"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/CandidateParty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BJP"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidatePartyAsk"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/CandidateDescription"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Party and its work"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidateParty"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/VoterImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/CandidateDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/TVcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Click your image"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/VoterImage" />

        <ImageView
            android:id="@+id/IVcamera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toEndOf="@+id/TVcamera"
            app:layout_constraintTop_toBottomOf="@+id/VoterImage" />

        <ImageView
            android:id="@+id/AadharCardPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/TVcamera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            />

        <TextView
            android:id="@+id/TVcameraAadhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Upload your Aadhar Card"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AadharCardPhoto" />

        <ImageView
            android:id="@+id/IVcameraAadhar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toEndOf="@+id/TVcameraAadhar"
            app:layout_constraintTop_toBottomOf="@+id/AadharCardPhoto" />

        <Button
            android:id="@+id/Vote_to_candidate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Click Here to Vote the Candidate"
            android:backgroundTint="#046A38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/IVcameraAadhar"
            android:layout_marginTop="30dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>